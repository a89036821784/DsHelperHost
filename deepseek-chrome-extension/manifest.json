{
  "manifest_version": 3,
  "name": "ds-helper",
  "version": "1.0",
  "description": "DS Helper Native Host",
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "DS Helper Controller"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "allowed_origins": [
    "chrome-extension://iappifgdfcbnekhmcmjcedpofmdcmcka/"
  ]
}